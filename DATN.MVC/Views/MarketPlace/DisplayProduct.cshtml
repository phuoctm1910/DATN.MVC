<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Sản Phẩm Thương Mại Điện Tử</title>
    <link rel="stylesheet" href="~/assets/css/DisplayProduct.css" />
</head>
<body>
    <div id="app">
        <div class="container">
            <h2>Đăng Sản Phẩm Mới</h2>
            <form id="productForm">
                <div class="row" @@submit="submitProduct">
                    <!-- Phần chi tiết sản phẩm -->
                    <div class="col-md-6 product-details">
                        <div class="form-group">
                            <label for="productName">Tên sản phẩm</label>
                            <input type="text" class="form-control" id="productName" v-model="product.name" placeholder="Nhập tên sản phẩm" required>
                        </div>

                        <div class="form-group">
                            <label for="productCode">Mã sản phẩm</label>
                            <input type="text" class="form-control" id="productCode" v-model="product.code" placeholder="Nhập mã sản phẩm">
                        </div>

                        <div class="form-group">
                            <label for="productPrice">Giá bán</label>
                            <input type="number" class="form-control" id="productPrice" v-model="product.price" placeholder="Nhập giá bán" required>
                        </div>

                        <div class="form-group">
                            <label for="productStock">Số lượng</label>
                            <input type="number" class="form-control" id="productStock" v-model="product.stock" placeholder="Nhập số lượng còn lại" required>
                        </div>

                        <div class="form-group">
                            <label for="productCategory">Danh mục sản phẩm</label>
                            <select class="form-control" id="productCategory" v-model="product.category" required>
                                <option value="Điện thoại">Điện thoại</option>
                                <option value="Thời trang">Thời trang</option>
                                <option value="Đồ gia dụng">Đồ gia dụng</option>
                                <option value="Mỹ phẩm">Mỹ phẩm</option>
                            </select>
                        </div>
                    </div>

                    <!-- Phần ảnh sản phẩm -->
                    <div class="col-md-6 product-images">
                        <!-- Khung ảnh chính -->
                        <div class="form-group">
                            <label for="productImages">Ảnh chính</label>
                            <div class="product-image-container" id="mainImageContainer" @@click="chooseMainImage">
                                <img :src="product.mainImagePreview" v-if="product.mainImagePreview" class="product-image" alt="Ảnh chính">
                                <span v-if="!product.mainImagePreview">Ảnh chính</span>
                            </div>
                            <input type="file" id="updateMainImage" class="d-none" @@change="updateMainImage" />
                        </div>

                        <!-- Khung ảnh phụ -->
                        <div class="form-group">
                            <label for="productImages">Ảnh phụ</label>
                            <div class="additional-images-container mt-3">
                                <div v-for="(image, index) in product.additionalImagesPreview" :key="index" class="additional-image-container" @@click="chooseAdditionalImage(index)">
                                    <img :src="image" alt="Ảnh phụ" v-if="image" class="product-image">
                                    <span v-if="!image">Ảnh phụ {{ index + 1 }}</span>
                                </div>
                            </div>
                            <input type="file" id="additionalImageInput" class="d-none" />
                        </div>
                    </div>

                    <!-- Phần mô tả sản phẩm -->
                    <div class="col-md-12 product-description">
                        <div class="form-group">
                            <label for="productDescription">Mô tả sản phẩm</label>
                            <textarea class="form-control" id="productDescription" v-model="product.description" rows="6" placeholder="Mô tả chi tiết về sản phẩm"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Nút đăng bán -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Đăng Sản Phẩm</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Thư viện Vue -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
    <script>
        new Vue({
            el: '#app',
            data: {
                product: {
                    mainImagePreview: null,
                    mainImageFile: null,
                    additionalImagesPreview: Array(5).fill(null), // Khởi tạo mảng 5 phần tử null cho ảnh phụ
                    name: '',
                    code: '',
                    price: '',
                    stock: '',
                    description: '',
                    category: 'Điện thoại'
                }
            },
            methods: {
                chooseMainImage() {
                    document.getElementById('updateMainImage').click();
                },
                updateMainImage(event) {
                    const file = event.target.files[0];
                    if (file) {
                        this.product.mainImagePreview = URL.createObjectURL(file);
                        this.product.mainImageFile = file; // Lưu file thực tế để gửi
                    }
                },
                chooseAdditionalImage(index) {
                    document.getElementById('additionalImageInput').click();
                    document.getElementById('additionalImageInput').onchange = (event) => {
                        this.updateAdditionalImage(event, index);
                    };
                },
                updateAdditionalImage(event, index) {
                    const file = event.target.files[0];
                    if (file) {
                        this.product.additionalImagesPreview.splice(index, 1, URL.createObjectURL(file));
                    }
                },
                submitProduct(event) {
                    event.preventDefault();

                    const formData = new FormData();
                    formData.append('Name', this.product.name);
                    formData.append('Code', this.product.code);
                    formData.append('Price', this.product.price);
                    formData.append('Stock', this.product.stock);
                    formData.append('Description', this.product.description);
                    formData.append('Category', this.product.category);

                    // Nếu có ảnh chính
                    if (this.product.mainImageFile) {
                        formData.append('MainImage', this.product.mainImageFile);
                    }

                    fetch('/Product/DisplayProduct', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Sản phẩm đã được đăng thành công!');
                            this.resetForm();
                        } else {
                            alert('Có lỗi xảy ra: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Đã xảy ra lỗi khi gửi dữ liệu!');
                    });
                },
                resetForm() {
                    this.product = {
                        mainImagePreview: null,
                        mainImageFile: null,
                        additionalImagesPreview: Array(5).fill(null),
                        name: '',
                        code: '',
                        price: '',
                        stock: '',
                        description: '',
                        category: 'Điện thoại'
                    };
                }
            }
        });
    </script>
</body>
</html>
