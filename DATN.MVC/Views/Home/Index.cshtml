@section Scripts{
    <script>
        new Vue({
            el: '#app',
            data: {
                EventBus: new Vue(),
                connection: null,
                showImageUpload: false,
                posts: [],
                postReactions: [],
                commentReactions: [],
                selectedPost: {},
                comments: [],
                commentsNotBuild: [],
                files: [],
                newComment: '',
                replyTarget: null,
                newPostContent: '',
                userId: userLogged, // thay đổi thành session
                newPostFor: 0,
                showSlideshow: false,
                slideshowImages: [],
                currentSlideIndex: 0,
                selectedImages: [],
                isCommentModalOpen: false,
                editPostData: {}, // Dữ liệu bài viết gốc (hiển thị bên ngoài)
                originalImageUrls: [], // Lưu danh sách ảnh gốc
                tempEditPostData: {}, // Dữ liệu tạm thời khi chỉnh sửa
                editImages: [], // Ảnh mới được thêm vào khi chỉnh sửa // Ảnh mới được thêm vào khi chỉnh sửa
                isEditPostModalOpen: false, // Trạng thái mở modal chỉnh sửa
            },
            created() {
                this.setupSignalR();
                this.loadPosts();
                // Lắng nghe sự kiện 'like-comment' từ EventBus
                this.EventBus.$on('like-comment', this.likeComment);
                this.EventBus.$on('reply-comment', this.replyToComment);
                $('#commentsModal').on('hidden.bs.modal', () => {
                    this.newComment = '';
                    this.replyTarget = null;
                });
            },
            mounted() {
                // Đảm bảo sự kiện `hidden.bs.modal` hoạt động chính xác
                $('#commentsModal').on('hidden.bs.modal', () => {
                    this.clearCommentData();
                });
            },
            methods: {
                setupSignalR() {
                    this.connection = new signalR.HubConnectionBuilder()
                        .withUrl("/generalHub")
                        .withAutomaticReconnect()
                        .build();

                    this.connection.serverTimeoutInMilliseconds = 60000;

                    this.connection.start();
                    // Cập nhật lượt thích từ SignalR
                    this.connection.on("ReceivePostLikeUpdate", (data) => {

                        // Tìm bài viết trong danh sách posts
                        const post = this.posts.find(p => p.id === data.postId);
                        if (post) {
                            post.reactCount = data.likeCount;  // Cập nhật reactCount của bài viết
                        }

                        console.log(post);  // Kiểm tra lại bài viết sau khi cập nhật
                    });

                    // Cập nhật lượt thích từ SignalR
                    this.connection.on("ReceiveCommentLikeUpdate", (data) => {

                        // Tìm bài viết trong danh sách posts
                        const comment = this.commentsNotBuild.find(c => c.id === data.commentId);
                        console.log(comment);
                        if (comment) {
                            comment.reactCount = data.likeCount;  // Cập nhật reactCount của bài viết
                        }

                        console.log(comment);  // Kiểm tra lại bài viết sau khi cập nhật
                    });

                    this.connection.on("ReceiveNewComment", (data, postId) => {

                        if (postId === this.selectedPost.id) {

                            const createdDate = new Date(data.createdDate * 1000);
                            data.displayDate = this.getRelativeTime(createdDate);
                            data.childrenArray = [];
                            data.expanded = true;
                            // Cập nhật lượt thích từ SignalR
                            const MAX_DEPTH = 2;


                            // Find parent comment
                            if (data.commentId !== null) {
                                const parentComment = this.findCommentById(data.commentId, this.comments);
                                if (parentComment) {
                                    // Calculate depth
                                    data.depth = parentComment.depth + 1;

                                    // Check MAX_DEPTH
                                    if (data.depth > MAX_DEPTH) {
                                        console.warn("Comment depth exceeds MAX_DEPTH. Adjusting...");
                                        data.depth = MAX_DEPTH;

                                        // Find an ancestor within MAX_DEPTH - 1
                                        let ancestor = parentComment;
                                        while (ancestor && ancestor.depth >= MAX_DEPTH - 1) {
                                            ancestor = this.findCommentById(ancestor.commentId, this.comments);
                                        }

                                        // Add to ancestor instead of direct parent
                                        if (ancestor) {
                                            ancestor.childrenArray.push(data);
                                            console.log("Added comment to ancestor:", ancestor);
                                        } else {
                                            console.warn("No valid ancestor found. Adding as root-level comment.");
                                            data.depth = 0;
                                            this.comments.push(data);
                                        }
                                    } else {
                                        parentComment.childrenArray.push(data);
                                        console.log("Added new comment to parent:", parentComment);
                                    }
                                } else {
                                    console.warn("Parent comment not found. Adding as root-level comment.");
                                    data.depth = 0;
                                    this.comments.push(data);
                                }
                            } else {
                                // Root-level comment
                                data.depth = 0;
                                this.comments.push(data);
                            }

                            const postBeCommented = this.posts.find(p => p.id === postId);
                            if (postBeCommented) {
                                postBeCommented.commentCount = (postBeCommented.commentCount || 0) + 1;
                            }

                            if (!this.commentsNotBuild.some(c => c.id === data.id)) {
                                this.commentsNotBuild.push(data);
                            }

                            
                        } else {
                            console.log("New comment received for another post:", data);
                        }
                    });

                },
                findCommentById(id, comments) {
                    for (const comment of comments) {
                        if (comment.id === id) {
                            return comment;
                        }
                        if (comment.childrenArray && comment.childrenArray.length > 0) {
                            const childComment = this.findCommentById(id, comment.childrenArray);
                            if (childComment) {
                                return childComment;
                            }
                        }
                    }
                    return null;
                },
                toggleImageUpload() {
                    this.showImageUpload = true;
                },
                triggerFileInput() {
                    this.$refs.fileInput.click();
                },
                handleFileUpload(event) {
                    const files = event.target.files;
                    if (files.length) {
                        this.files = Array.from(files); // Lưu trữ tất cả file vào mảng files

                        // Tạo URL xem trước cho tất cả các ảnh đã chọn
                        this.selectedImages = this.files.map(file => URL.createObjectURL(file));
                    }
                },
                openSlideshow(images, startIndex = 0) {
                    this.slideshowImages = images;
                    this.currentSlideIndex = startIndex;
                    this.showSlideshow = true;
                },
                closeSlideshow() {
                    this.showSlideshow = false;
                },
                nextSlide() {
                    this.currentSlideIndex = (this.currentSlideIndex + 1) % this.slideshowImages.length;
                },
                prevSlide() {
                    this.currentSlideIndex = (this.currentSlideIndex - 1 + this.slideshowImages.length) % this.slideshowImages.length;
                },
                removeImage() {
                    this.selectedImages = [];
                    this.files = []; // Xóa tất cả các file đã chọn
                    this.showImageUpload = false;
                },
                async postingPost() {
                    const createdDate = moment().utcOffset(7).format('YYYY-MM-DDTHH:mm:ss.SSSZ'); // ISO-like format with milliseconds and UTC+7
                    const formData = new FormData();
                    formData.append('UserId', this.userId);
                    formData.append('Content', this.newPostContent);
                    formData.append('CreatedDate', createdDate);
                    formData.append('PostFor', parseInt(this.newPostFor));

                    if (this.files && this.files.length > 0) {
                        this.files.forEach((file) => {
                            formData.append('ImageFile', file); // Không cần chỉ mục, chỉ dùng 'ImageFile'
                        });
                    }

                    try {
                        // Gửi yêu cầu POST tới controller trong backend
                        const response = await fetch('/Post/ShareAndAddNew', {
                            method: 'POST',
                            body: formData
                        });

                        // Kiểm tra phản hồi từ server
                        const data = await response.json();

                        if (response.ok && data.success) {
                            // Nếu thành công, tải lại danh sách bài viết
                            this.loadPosts();

                            // Đặt lại trạng thái các biến sau khi đăng thành công
                            this.newPostContent = '';
                            this.newPostFor = 0;
                            this.files = []; // Xóa các file đã chọn
                            this.selectedImage = null; // Xóa hình ảnh xem trước
                            this.showImageUpload = false; // Đóng giao diện tải ảnh
                        } else {
                            // Xử lý lỗi nếu bài viết không được đăng thành công
                            console.error('Lỗi khi đăng bài:', data.message || 'Có lỗi xảy ra');
                        }
                    } catch (error) {
                        // Xử lý lỗi nếu có vấn đề trong quá trình gửi yêu cầu
                        console.error('Lỗi khi gửi yêu cầu:', error);
                    }
                },
                async sharePost(post) {
                    // Use Moment.js to get the current time in VN timezone (UTC+7) with milliseconds
                    const createdDate = moment().utcOffset(7).format('YYYY-MM-DDTHH:mm:ss.SSSZ'); // ISO-like format with milliseconds and UTC+7

                    const postData = {
                        UserId: this.userId, // ID người dùng
                        PostId: post.id, // Nếu muốn cập nhật bài viết hiện có, có thể thay đổi
                        CreatedDate: createdDate, // Use moment.js to format the current time
                    };

                    try {
                        console.log(postData);
                        const response = await fetch('/Post/ShareAndAddNew', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json charset=utf-8' // Define the content type
                            },
                            body: JSON.stringify(postData) // Send the postData as JSON
                        });

                        // Kiểm tra phản hồi từ server
                        const data = await response.json();

                        if (response.ok && data.success) {
                            // Nếu thành công, tải lại danh sách bài viết
                            this.loadPosts();

                            // Đặt lại trạng thái các biến sau khi đăng thành công
                            this.newPostContent = '';
                            this.newPostFor = '0'; // Đặt lại mức độ hiển thị về mặc định là công khai
                        } else {
                            // Xử lý lỗi nếu bài viết không được đăng thành công
                            console.error('Lỗi khi đăng bài:', data.message || 'Có lỗi xảy ra');
                        }
                    } catch (error) {
                        // Xử lý lỗi nếu có vấn đề trong quá trình gửi yêu cầu
                        console.error('Lỗi khi gửi yêu cầu:', error);
                    }
                },
                async loadPosts() {
                    try {
