                                                    <button class="action-btn like-btn" v-bind:class="{ active: selectedPost.likedByCurrentUser }" v-on:click="likePost(selectedPost)">
                                                        <i class="fa fa-thumbs-up" style="margin-right: 7px;"></i> Like
                                                    </button>
                                                    <button class="action-btn comment-btn">
                                                        <i class="fa fa-comment" style="margin-right: 7px;"></i> Comment
                                                    </button>
                                                    <button class="action-btn share-btn">
                                                        <i class="fa fa-share" style="margin-right: 7px;" v-on:click="sharePost(selectedPost)"></i> Share
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Render top-level comments -->
                                        <div class="comments-section mt-3">
                                            <comment-item v-for="comment in comments"
