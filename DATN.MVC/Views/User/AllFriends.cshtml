@model List<DATN.MVC.Respone.Friends.FriendListRes>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Bạn Bè</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background-color: #fff;
            padding-top: 20px;
            border-right: 1px solid #ddd;
        }

            .sidebar h4 {
                text-align: center;
                font-size: 24px;
                margin-bottom: 30px;
                color: #007bff;
            }

            .sidebar a {
                display: block;
                padding: 15px;
                font-size: 18px;
                color: #333;
                text-decoration: none;
                transition: background-color 0.3s;
            }

                .sidebar a:hover {
                    background-color: #f1f1f1;
                }

        /* Main Content */
        .main-content {
            margin-left: 270px;
            padding: 30px;
        }

            .main-content h3 {
                color: #007bff;
            }

        /* Friend List */
        .friend-list {
            list-style: none;
            padding: 0;
            display: flex;
            flex-wrap: wrap;
        }

            .friend-list .list-wrap {
                width: 100%;
                max-width: 300px;
                display: flex;
                flex-direction: column;
                align-items: center;
                border: 1px solid #ddd;
                border-radius: 10px;
                background-color: #fff;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                padding: 15px;
                padding-top: 15px;
                transition: transform 0.3s ease;
                margin-bottom: 20px;
            }

                .friend-list .list-wrap:hover {
                    transform: translateY(-5px);
                }

            .friend-list .item-avatar img {
                width: 200px;
                height: 200px;
                object-fit: cover;
                border-radius: 50%;
                margin-bottom: 10px;
            }

            .friend-list .item h5 {
                font-size: 18px;
                margin-bottom: 10px;
                text-align: center;
            }

            .friend-list .actions {
                text-align: center;
            }

        /* Nút Huỷ kết bạn */
        .cancel-friendship-button {
            display: inline-block;
            outline: none;
            cursor: pointer;
            padding: 0 16px;
            background-color: #fff;
            border-radius: 0.25rem;
            border: 1px solid #0070d2;
            color: #0070d2;
            font-size: 18px;
            line-height: 40px;
            font-weight: 500;
            text-align: center;
            : hover

        {
            background-color: #f4f6f9;
        }

        }

        .cancel-friendship-button:hover {
            background-color: #0070d2; /* Thay đổi màu khi hover */
            text-decoration: none;
            color: #fff;
            transform: translateY(-3px); /* Hiệu ứng chuyển động nhẹ khi hover */
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .main-content {
                margin-left: 220px;
            }

            .friend-list .col-md-3 {
                flex: 1 1 48%;
            }

            .friend-list .col-md-2 {
                flex: 1 1 48%;
            }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4>Menu</h4>
        <a href="/"><i class="fas fa-home"></i> Trang chủ</a>
        <a href="@Url.Action("RequestFriends", "User")"><i class="fas fa-user-plus"></i> Lời mời kết bạn</a>
        <a href="@Url.Action("SuggestFriend", "User")"><i class="fas fa-user-friends"></i> Gợi ý kết bạn</a>
        <a href="@Url.Action("AllFriends", "User")"><i class="fas fa-users"></i> Tất cả bạn bè</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h3>Tất cả bạn bè</h3>
        <div class="friend-list row">
            @if (!Model.Any())
            {
                <p>Không có bạn bè nào.</p>

            }
            else
            {
                @foreach (var item in Model)
                {

                    <div class="col-md-3 col-sm-6 col-12">
                        <div class="list-wrap">
                            <div class="item-avatar">
                                <a href="#">
                                    <img loading="lazy" src="@(!string.IsNullOrEmpty(item.FriendImage) ? item.FriendImage : "https://smmhwsdluglunrhndxcb.supabase.co/storage/v1/object/public/images/default-userImg.jpg" )" alt="Friend" class="avatar user-14-avatar avatar-200 photo" width="200" height="200" alt="Profile picture of John Thompson">
                                </a>
                            </div>
                            <div class="item">
                                <h5><a href="#">@item.FriendFullName</a></h5>
                                <form class="actions" asp-action="Unfriend" asp-controller="User" method="post">
                                    <input type="hidden" name="FriendId" value="@item.FriendId" />
                                    <button type="submit" class="cancel-friendship-button">Hủy kết bạn</button>
                                </form>

                            </div>
                        </div>
                    </div>

                }
            }
            <!-- Friend 1 -->

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>