@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background-color: #fff;
            padding-top: 20px;
            border-right: 1px solid #ddd;
        }

        .sidebar h4 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 30px;
            color: #007bff;
        }

        .sidebar a {
            display: block;
            padding: 15px;
            font-size: 18px;
            color: #333;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .sidebar a:hover {
            background-color: #f1f1f1;
        }

        /* Main Content */
        .main-content {
            margin-left: 270px;
            padding: 30px;
        }

        .main-content h3 {
            color: #007bff;
        }

        /* Friend List */
        .friend-list {
            list-style: none;
            padding: 0;
            display: flex;
            flex-wrap: wrap;
            
        }

        .friend-list .list-wrap {
            width: 100%;
            max-width: 300px;
            display: flex;
            flex-direction: column;
            align-items: center;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
            padding-top: 15px;
            transition: transform 0.3s ease;
            margin-bottom: 20px;
        }

        .friend-card .btn {
            font-size: 14px;
            font-weight: bold;
            padding: 8px 20px;
            border-radius: 6px;
            width: 100%;
            text-align: center;
            transition: background-color 0.2s ease;
        }
        .friend-list .list-wrap:hover {
            transform: translateY(-5px);
        }

        .friend-list .item-avatar img {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 10px;
        }

        .friend-list .item h5 {
            font-size: 18px;
            margin-bottom: 10px;
            text-align: center;
        }

        .friend-list .actions {
            text-align: center;
        }

        /* Nút Huỷ kết bạn */
        .cancel-friendship-button {
            display: inline-block;
            outline: none;
            cursor: pointer;
            padding: 0 16px;
            background-color: #fff;
            border-radius: 0.25rem;
            border: 1px solid #0070d2;
            color: #0070d2;
            font-size: 18px;
            line-height: 40px;
            font-weight: 500;
            text-align: center;
            : hover

        {
            background-color: #f4f6f9;
        
        }

        }

        .cancel-friendship-button:hover {
            background-color: orangered; /* Thay đổi màu khi hover */
            text-decoration: none;
            transform: translateY(-3px); /* Hiệu ứng chuyển động nhẹ khi hover */
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .main-content {
                margin-left: 220px;
            }

            .friend-list .col-md-3 {
                flex: 1 1 48%;
            }

            .friend-list .col-md-2 {
                flex: 1 1 48%;
            }
        }
    </style>
}

