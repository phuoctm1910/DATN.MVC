@section Styles{
    <style>
        .sidebar {
            background-color: #f0f2f5;
            padding: 20px;
            max-height: 100%;
            width: 500px;
        }

            .sidebar .menu-item {
                display: flex;
                align-items: center;
                padding: 20px;
                font-size: 20px;
                border: none;
            }

                .sidebar .menu-item img {
                    width: 24px;
                    height: 24px;
                }

        .menu-item:hover {
            color: grey;
        }

        .friend-requests {
            padding: 30px;
        }

        .friend-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            text-align: center;
            padding: 10px;
        }

            .friend-card img {
                border-radius: 8px;
                width: 100%;
                height: 280px; /* Thiết lập chiều cao cố định */
                object-fit: cover; /* Cắt ảnh để vừa chiều cao và chiều rộng */
            }

            .friend-card .btn-group {
                width: 100%;
                gap: 10px;
            }
    </style>

}
