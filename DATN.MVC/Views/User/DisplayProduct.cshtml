<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Sản Phẩm Thương Mại Điện Tử</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            padding-top: 30px;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            border-radius: 5px;
            padding: 12px;
            font-size: 14px;
            border: 1px solid #ced4da; /* Đảm bảo có viền */
        }

            .form-control:focus {
                border-color: #007bff; /* Thêm màu viền khi focus */
                box-shadow: none; /* Loại bỏ hiệu ứng shadow khi focus */
            }

        .btn-primary {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        /* Khung ảnh chính */
        .product-image-container {
            width: 100%;
            height: 200px; /* Chiều cao cố định */
            background-color: #e0e0e0; /* Màu nền khi chưa có ảnh */
            border-radius: 8px;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            position: relative;
            cursor: pointer; /* Thêm cursor pointer để báo cho người dùng là có thể click */
        }

        /* Ảnh trong khung */
        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Đảm bảo ảnh không bị biến dạng */
        }

        .img-thumbnail {
            max-width: 100px;
            margin: 5px;
            border-radius: 5px;
            object-fit: cover;
        }

        /* Khung ảnh phụ */
        .additional-images-container {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 10px;
        }

        .additional-image-container {
            width: 100%;
            height: 100px;
            background-color: #f0f0f0;
            border-radius: 8px;
            position: relative;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .additional-image-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .additional-image-container span {
                position: absolute;
                color: #fff;
                font-size: 18px;
                font-weight: bold;
            }

        .slick-carousel .slick-slide {
            display: flex;
            justify-content: center;
        }

        .slick-prev, .slick-next {
            background-color: #007bff;
            color: white;
            border-radius: 50%;
            padding: 5px;
            font-size: 18px;
        }

            .slick-prev:hover, .slick-next:hover {
                background-color: #0056b3;
            }

        .slick-prev {
            left: -15px;
        }

        .slick-next {
            right: -15px;
        }
    </style>
</head>
<body>
    <div id="app">
        <div class="container">
            <h2>Đăng Sản Phẩm Mới</h2>
            <form id="productForm">
                <div class="row">
                    <!-- Phần chi tiết sản phẩm -->
                    <div class="col-md-6 product-details">
                        <div class="form-group">
                            <label for="productName">Tên sản phẩm</label>
                            <input type="text" class="form-control" id="productName" v-model="product.name" placeholder="Nhập tên sản phẩm" required>
                        </div>

                        <div class="form-group">
                            <label for="productCode">Mã sản phẩm</label>
                            <input type="text" class="form-control" id="productCode" v-model="product.code" placeholder="Nhập mã sản phẩm">
                        </div>

                        <div class="form-group">
                            <label for="productPrice">Giá bán</label>
                            <input type="number" class="form-control" id="productPrice" v-model="product.price" placeholder="Nhập giá bán" required>
                        </div>

                        <div class="form-group">
                            <label for="productStock">Số lượng</label>
                            <input type="number" class="form-control" id="productStock" v-model="product.stock" placeholder="Nhập số lượng còn lại" required>
                        </div>

                        <div class="form-group">
                            <label for="productCategory">Danh mục sản phẩm</label>
                            <select class="form-control" id="productCategory" v-model="product.category" required>
                                <option value="Điện thoại">Điện thoại</option>
                                <option value="Thời trang">Thời trang</option>
                                <option value="Đồ gia dụng">Đồ gia dụng</option>
                                <option value="Mỹ phẩm">Mỹ phẩm</option>
                            </select>
                        </div>
                    </div>

                    <!-- Phần ảnh sản phẩm -->
                    <div class="col-md-6 product-images">
                        <!-- Khung ảnh chính -->
                        <div class="form-group">
                            <label for="productImages">Ảnh chính</label>
                            <div class="product-image-container" id="mainImageContainer">
                                <img :src="product.mainImagePreview" v-if="product.mainImagePreview" class="product-image" alt="Ảnh chính">
                                <span v-if="!product.mainImagePreview">Ảnh chính</span>
                            </div>
                            <input type="file" id="updateMainImage" class="d-none" />
                        </div>

                        <!-- Khung ảnh phụ -->
                        <div class="form-group">
                            <label for="productImages">Ảnh phụ</label>
                            <div class="additional-images-container mt-3">
                                <div v-for="(image, index) in product.additionalImagesPreview" :key="index" class="additional-image-container" :id="'additionalImageContainer' + index">
                                    <img :src="image" alt="Ảnh phụ" v-if="image" class="product-image">
                                    <span v-if="!image">Ảnh phụ {{ index + 1 }}</span>
                                </div>
                            </div>
                            <input type="file" id="additionalImageInput" class="d-none" />
                        </div>
                    </div>

                    <!-- Phần mô tả sản phẩm -->
                    <div class="col-md-12 product-description">
                        <div class="form-group">
                            <label for="productDescription">Mô tả sản phẩm</label>
                            <textarea class="form-control" id="productDescription" v-model="product.description" rows="6" placeholder="Mô tả chi tiết về sản phẩm"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Nút đăng bán -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Đăng Sản Phẩm</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script>
        new Vue({
            el: '#app',
            data: {
                product: {
                    mainImagePreview: null,
                    additionalImagesPreview: Array(5).fill(null), // Khởi tạo mảng 5 phần tử null cho ảnh phụ
                    name: '',
                    code: '',
                    price: '',
                    stock: '',
                    description: '',
                    category: 'Điện thoại'
                }
            },
            methods: {
                chooseMainImage() {
                    document.getElementById('updateMainImage').click();
                },
                updateMainImage(event) {
                    const file = event.target.files[0];
                    if (file) {
                        this.product.mainImagePreview = URL.createObjectURL(file);
                    }
                },
                chooseAdditionalImage(index) {
                    document.getElementById('additionalImageInput').click();
                    document.getElementById('additionalImageInput').onchange = (event) => {
                        this.updateAdditionalImage(event, index);
                    };
                },
                updateAdditionalImage(event, index) {
                    const file = event.target.files[0];
                    if (file) {
                        this.product.additionalImagesPreview.splice(index, 1, URL.createObjectURL(file));
                    }
                },
                submitProduct(event) {
                    event.preventDefault();
                    alert("Sản phẩm đã được đăng!");
                    console.log(this.product);
                }
            },
            mounted() {
                // Gắn sự kiện submit form
                document.getElementById('productForm').addEventListener('submit', this.submitProduct);

                // Gắn sự kiện cho ảnh chính
                document.getElementById('mainImageContainer').addEventListener('click', this.chooseMainImage);

                // Gắn sự kiện cho ảnh phụ
                for (let i = 0; i < 5; i++) {
                    document.getElementById('additionalImageContainer' + i).addEventListener('click', () => this.chooseAdditionalImage(i));
                }

                // Thêm sự kiện cho input ảnh chính
                document.getElementById('updateMainImage').addEventListener('change', this.updateMainImage);
            }
        });
    </script>
</body>
</html>
