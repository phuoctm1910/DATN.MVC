@model DATN.MVC.Areas.Admin.Models.AdminPost.Request.EditPostStatus_Req

@{
    ViewData["Title"] = "Chỉnh sửa trạng thái bài đăng";
}

<style>
    /* Container của form */
    .edit-post-status-form-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f1f1f1;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
    }

    /* Tiêu đề */
    .edit-post-status-title {
        text-align: center;
        color: #333;
        font-size: 24px;
        margin-bottom: 20px;
    }

    /* Các nhóm của form */
    .edit-post-status-form-group {
        margin-bottom: 15px;
    }

    /* Nhãn của form */
    .edit-post-status-label {
        font-weight: bold;
        color: #555;
        display: block;
        margin-bottom: 5px;
    }

    /* Các ô input */
    .edit-post-status-input {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
        box-sizing: border-box;
        font-size: 16px;
    }

    /* Select box */
    .edit-post-status-select {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
        font-size: 16px;
        background-color: #fff;
    }

    /* Nút cập nhật */
    .edit-post-status-btn {
        width: 100%;
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 12px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        /* Hiệu ứng hover của nút cập nhật */
        .edit-post-status-btn:hover {
            background-color: #0056b3;
        }

    /* Thông báo lỗi */
    .edit-post-status-error-message {
        color: red;
        font-size: 14px;
        margin-top: 5px;
    }

</style>

<div class="edit-post-status-form-container">
    <h2 class="edit-post-status-title">@ViewData["Title"]</h2>

    <form method="post" asp-action="UpdateStatusPost" asp-controller="AdminPost">
        <!-- Hiển thị ID bài đăng -->
        <div class="edit-post-status-form-group">
            <label for="PostId" class="edit-post-status-label">ID Bài viết:</label>
            <input type="text" id="PostId" name="PostId" class="edit-post-status-input" value="@Model.PostId" readonly />
        </div>
       

        <!-- Hiển thị trạng thái bài đăng -->
        <div class="edit-post-status-form-group">
            <label for="IsActived" class="edit-post-status-label">Trạng thái bài viết:</label>
            <select id="IsActived" name="IsActived" class="edit-post-status-select">
                @if (Model.IsActived)
                {
                    <option value="true" selected>Hoạt động</option>
                    <option value="false">Không hoạt động</option>
                }
                else
                {
                    <option value="true">Hoạt động</option>
                    <option value="false" selected>Không hoạt động</option>
                }
            </select>
        </div>

        <button type="submit" class="edit-post-status-btn">Cập nhật trạng thái</button>
    </form>
</div>



