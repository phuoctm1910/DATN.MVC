@model IEnumerable<DATN.MVC.Areas.Admin.Models.AdminSalePlace.Response.ViewSalePlace_Res>

<h1>Danh Sách Gian Hàng</h1>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Danh Sách Gian Hàng
    </div>
    <div class="card-body">
        <table id="datatablesSalePlace" class="table table-striped table-bordered">
            <thead >
                <tr>
                    <th class="text-center align-middle">Tên Gian Hàng</th>
                    <th class="text-center align-middle">Người Tạo</th>
                    <th class="text-center align-middle">Trạng Thái</th>
                    <th class="text-center align-middle">Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align: center; vertical-align:middle">
                        <td>@item.Name</td>
                        <td>@item.UserId</td>
                        <td>@(item.Status == 1 ? "Đang mở" : "Đang đóng")</td>
                        <td>
                            <!-- Nút chỉnh sửa, mở modal và truyền dữ liệu -->
                            <button type="button" class="btn btn-primary" onclick="openEditModal(@item.Id, @item.Status)">Chỉnh sửa</button>
                            <button type="button" class="btn btn-danger" onclick="deleteSalePlace(@item.Id)">Xóa</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editSalePlaceModal" tabindex="-1" aria-labelledby="editSalePlaceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editSalePlaceModalLabel">Chỉnh sửa trạng thái gian hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="UpdateStatusSalePlace" asp-controller="AdminManageSalePlace">
                    <!-- Hiển thị ID gian hàng -->
                    <div class="mb-3">
                        <label for="SalePlaceId" class="form-label">ID Gian hàng:</label>
                        <input type="text" id="SalePlaceId" name="Id" class="form-control" readonly />
                    </div>

                    <!-- Hiển thị trạng thái gian hàng -->
                    <div class="mb-3">
                        <label for="Status" class="form-label">Trạng thái gian hàng:</label>
                        <select id="Status" name="Status" class="form-select">
                            <option value="1">Đang mở</option>
                            <option value="0">Đang đóng</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Cập nhật trạng thái</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/js/datatable-SalePlace.js"></script>

}

