@model DATN.MVC.Areas.Admin.Models.AdminCategory.Response.ParentCategories_Res
@using DATN.MVC.Areas.Admin.Models.AdminCategory.Request
@using Newtonsoft.Json

@{
    ViewData["Title"] = "Chỉnh sửa danh mục cha";
}
<style>
    /* Container của form */
    .edit-category-form-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f1f1f1;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
    }

    /* Tiêu đề */
    .edit-category-title {
        text-align: center;
        color: #333;
        font-size: 24px;
        margin-bottom: 20px;
    }

    /* Các nhóm của form */
    .edit-category-form-group {
        margin-bottom: 15px;
    }

    /* Nhãn của form */
    .edit-category-label {
        font-weight: bold;
        color: #555;
        display: block;
        margin-bottom: 5px;
    }

    /* Các ô input */
    .edit-category-input {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
        box-sizing: border-box;
        font-size: 16px;
    }

    /* Select box */
    .edit-category-select {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
        font-size: 16px;
        background-color: #fff;
    }

    /* Nút cập nhật */
    .edit-category-btn {
        width: 100%;
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 12px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        /* Hiệu ứng hover của nút cập nhật */
        .edit-category-btn:hover {
            background-color: #0056b3;
        }

    /* Thông báo lỗi */
    .edit-category-error-message {
        color: red;
        font-size: 14px;
        margin-top: 5px;
    }

</style>
<div class="edit-category-form-container">
    <h2 class="edit-category-title">@ViewData["Title"]</h2>

    <form method="post" asp-action="UpdateParentCategory" asp-route-id="@Model.Id" onsubmit="return validateForm()">
        <!-- Tên danh mục -->
        <div class="edit-category-form-group">
            <label for="Name" class="edit-category-label">Tên danh mục:</label>
            <input type="text" class="edit-category-input" id="Name" name="Name" value="@Model.Name" required />
        </div>

        <!-- Trạng thái hoạt động -->
        <div class="edit-category-form-group">
            <label for="IsActived" class="edit-category-label">Trạng thái hoạt động:</label>
            <select class="edit-category-select" id="IsActived" name="IsActived">
                @if (Model.IsActived)
                {
                    <option value="true" selected>Sử dụng</option>
                    <option value="false">Không sử dụng</option>
                }
                else
                {
                    <option value="true">Sử dụng</option>
                    <option value="false" selected>Không sử dụng</option>
                }
            </select>
        </div>

        <!-- Nút cập nhật -->
        <button type="submit" name="btn2" class="edit-category-btn">Cập nhật</button>
    </form>
</div>


<script>
    function validateForm() {
        const nameInput = document.getElementById("Name");
        const nameValue = nameInput.value.trim();
        const namePattern = /^[a-zA-ZÀÁÂÃÈÉÊÌÍÒÓÔÕÙÚĂĐĨŨƠàáâãèéêìíòóôõùúăđĩũơƠƯẠ-ỹ\s]+$/u;

        // Xóa thông báo lỗi trước đó
        document.querySelectorAll(".edit-category-error-message").forEach(e => e.remove());

        let isValid = true;

        // Kiểm tra rỗng
        if (!nameValue) {
            const errorMessage = document.createElement("div");
            errorMessage.className = "edit-category-error-message";
            errorMessage.textContent = "Tên danh mục không được để trống.";
            nameInput.parentNode.appendChild(errorMessage);
            isValid = false;
        }
        // Kiểm tra ký tự hợp lệ
        else if (!namePattern.test(nameValue)) {
            const errorMessage = document.createElement("div");
            errorMessage.className = "edit-category-error-message";
            errorMessage.textContent = "Tên danh mục chỉ được chứa chữ cái và khoảng trắng.";
            nameInput.parentNode.appendChild(errorMessage);
            isValid = false;
        }

        return isValid;
    }
</script>
