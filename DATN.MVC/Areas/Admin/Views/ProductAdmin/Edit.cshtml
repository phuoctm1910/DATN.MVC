@model DATN.MVC.Areas.Admin.Models.ManagerProduct.Request.ProductReq

<h2 class="edit-product-title">Chỉnh sửa Trạng thái Sản phẩm</h2>

<div class="edit-product-form-container">
    <form method="post" asp-action="UpdateProductStatus" asp-controller="AdminManageProduct">
        <!-- Hoạt động -->
        <div class="edit-product-form-group">
            <label for="IsActived" class="edit-product-label">Hoạt động:</label>
            <input type="checkbox" id="IsActived" name="IsActived" checked="@Model.IsActived" />
        </div>

        <!-- Nút cập nhật -->
        <button type="submit" class="edit-product-btn">Cập nhật</button>
    </form>
</div>

@section Styles {
    <style>
        .edit-product-form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f1f1f1;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }

        .edit-product-title {
            text-align: center;
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }

        .edit-product-form-group {
            margin-bottom: 20px;
        }

        .edit-product-label {
            display: block;
            font-weight: bold;
            color: #555;
            margin-bottom: 8px;
        }

        .edit-product-input {
            width: 100%;
            padding: 12px;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            font-size: 16px;
        }

        .edit-product-btn {
            width: 100%;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 12px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .edit-product-btn:hover {
                background-color: #0056b3;
            }
    </style>
}
