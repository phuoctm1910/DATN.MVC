@model DATN.MVC.Areas.Admin.Models.AdminChildCategory.ViewModels.EditChildCategoryViewModel

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<h2>@ViewData["Title"]</h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

<form asp-action="UpdateChildCategory" method="post">
    <input type="hidden" name="Id" value="@Model.ChildCategory.Id" />

    <!-- Dropdown danh mục cha -->
    <div class="form-group">
        <label for="ParentCategoryId">Danh mục cha</label>
        <select id="ParentCategoryId" name="ParentCategoryId" class="form-control">
            <option value="">Chọn danh mục cha</option>
            @foreach (var parent in Model.ParentCategories)
            {
                <option value="@parent.Id" selected="@((Model.ChildCategory.ParentCategoryId == parent.Id) ? "selected" : "")">
                    @parent.Name
                </option>
            }
        </select>
    </div>

    <!-- Nhập tên danh mục con -->
    <div class="form-group">
        <label for="CategoryName">Tên danh mục</label>
        <input type="text" id="CategoryName" name="CategoryName" class="form-control" value="@Model.ChildCategory.Name" required />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a href="@Url.Action("Index", "AdminChildCategory")" class="btn btn-secondary">Hủy bỏ</a>
</form>
