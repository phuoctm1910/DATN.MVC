@model IEnumerable<DATN.MVC.Areas.Employee.Models.EmployePost.Respone.EmployeViewPostRespone_Res>

<h1>Quản Lý Bài Đăng</h1>

<!-- Modal chỉnh sửa trạng thái -->
<div class="modal fade" id="editPostModal" tabindex="-1" role="dialog" aria-labelledby="editPostModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPostModalLabel">Chỉnh sửa trạng thái bài đăng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editPostForm">
                    <div class="form-group">
                        <label for="modalPostId">Mã bài đăng:</label>
                        <input type="text" class="form-control" id="modalPostId" readonly />
                    </div>
                    <div class="form-group">
                        <label for="modalIsActived">Trạng thái hoạt động:</label>
                        <select class="edit-category-select form-control" id="modalIsActived" name="IsActived">
                            <option value="true">Sử dụng</option>
                            <option value="false">Không sử dụng</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="saveChangesButton">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>

<!-- Card chứa bảng -->
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Danh Sách Bài Đăng
    </div>
    <div class="card-body">
        <table id="datatablesPost" class="table table-striped table-bordered" style="margin-top: 20px;">
            <thead>
                <tr>
                    <th class="text-center align-middle">Tên Người Dùng</th>
                    <th class="text-center align-middle">Nội Dung</th>
                    <th class="text-center align-middle">Hình Ảnh</th>
                    <th class="text-center align-middle">Đối Tượng</th>
                    <th class="text-center align-middle">Trạng Thái</th>
                    <th class="text-center align-middle">Ngày Tạo</th>
                    <th class="text-center align-middle">Ngày Cập Nhật</th>
                    <th class="text-center align-middle">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr style="text-align: center; vertical-align: middle;">
                        <td>@post.FullName</td>
                        <td>@post.Content</td>
                        <td>
                            @if (!string.IsNullOrEmpty(post.Image))
                            {
                                <img src="@post.Image" alt="Post Image" style="width: 100px; height: auto;" />
                            }
                            else
                            {
                                <span>Không có ảnh</span>
                            }
                        </td>
                        <td>@post.PostFor</td>
                        <td>@(post.IsActived ? "Sử dụng" : "Không sử dụng")</td>
                        <td>@post.CreatedDateTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@post.UpdatedDateTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <button type="button" class="btn btn-primary edit-button"
                                    data-id="@post.Id"
                                    data-isactived="@post.IsActived"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editPostModal">
                                Chỉnh sửa
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script src="~/Employe/js/datatable-Employe-Post.js"></script>

}
